<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangsong.sys.dao.UserRoleMapper">
  <resultMap id="BaseResultMap" type="com.wangsong.sys.model.UserRole">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
    <result column="role_id" jdbcType="VARCHAR" property="roleId" />
  </resultMap>
  <delete id="deleteByUser" parameterType="com.wangsong.sys.model.User">
    delete from sys_user_role
    where user_id = #{id,jdbcType=VARCHAR}
  </delete>
  <delete id="deleteByRole" parameterType="com.wangsong.sys.model.Role">
    delete from sys_user_role
    where role_id = #{id,jdbcType=VARCHAR}
  </delete>
  <insert id="insert" parameterType="com.wangsong.sys.model.UserRole">
    insert into sys_user_role (id, user_id, role_id
      )
    values (#{id,jdbcType=VARCHAR}, #{userId,jdbcType=VARCHAR}, #{roleId,jdbcType=VARCHAR}
      )
  </insert>
  <select id="selectByUser" resultMap="BaseResultMap" parameterType="com.wangsong.sys.model.User">
    select id, user_id, role_id
    from sys_user_role  where user_id = #{id,jdbcType=VARCHAR}
  </select>
</mapper>